" VIM config for IntelliJ IDEA

set expandtab shiftwidth=2 tabstop=2
set hlsearch ignorecase incsearch smartcase

set visualbell
set scrolloff=3
set laststatus=2

" Improved joining of lines
" https://github.com/JetBrains/ideavim/wiki/%22ideajoin%22-examples
set ideajoin

" Handles conflicts for active keymap
" https://github.com/JetBrains/ideavim/wiki/sethandler
sethandler <C-A> a:vim
sethandler <C-B> a:ide
sethandler <C-C> a:ide
sethandler <C-D> a:vim
sethandler <C-E> a:ide
sethandler <C-F> a:ide
sethandler <C-G> a:vim
sethandler <C-H> a:vim
sethandler <C-I> a:vim
sethandler <C-J> a:vim
sethandler <C-K> a:ide
sethandler <C-L> a:vim
sethandler <C-M> a:vim
sethandler <C-N> a:vim
sethandler <C-O> a:vim
sethandler <C-P> a:vim
sethandler <C-Q> a:ide
sethandler <C-R> a:vim
sethandler <C-S> a:vim
sethandler <C-T> a:vim
sethandler <C-U> a:vim
sethandler <C-V> a:vim
sethandler <C-W> a:vim
sethandler <C-X> a:vim
sethandler <C-Y> a:vim
sethandler <C-[> a:vim
sethandler <C-]> a:vim
